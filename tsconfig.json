{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "skipLibCheck": true
        
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules", 
        "examples",
        "tests",
        "dist"],
}
